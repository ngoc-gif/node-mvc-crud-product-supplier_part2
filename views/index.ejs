<%- include("partials/header") %>

<div class="text-center">
  <h1 class="mb-4">Chào mừng đến với Session Auth App</h1>
  <% if (user) { %>
    <p class="lead">Bạn đã đăng nhập với tài khoản <strong><%= user.username %></strong></p>
    <a href="/logout" class="btn btn-danger">Đăng xuất</a>
  <% } else { %>
    <p class="lead">Vui lòng đăng nhập hoặc đăng ký để tiếp tục.</p>
    <a href="/login" class="btn btn-primary me-2">Đăng nhập</a>
    <a href="/register" class="btn btn-success">Đăng ký</a>
  <% } %>
</div>

<%- include("partials/footer") %>
